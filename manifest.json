{
  "manifest_version": 3,
  "name": "Gmail Train - Multi-Email Scheduler",
  "version": "1.5.1",
  "description": "Schedule and send emails separately and sequentially in Gmail with English & Turkish support",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/iconbase.png",
      "128": "images/iconbase.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "images/iconbase.png",
    "128": "images/iconbase.png"
  }
}

